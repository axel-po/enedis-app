{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/domain/*": ["src/domain/*"],
      "@/di/*": ["src/di/*"],
      "@/infrastructure/*": ["src/infrastructure/*"],
      "@/utils/*": ["src/utils/*"],
      "@/store": ["src/store/store.ts"],
      "@/components/*": ["src/userinterface/components/*"],
      "@/pages/*": ["src/userinterface/pages/*"],
      "@/styles/*": ["src/styles/*"],
      "@/assets/*": ["./assets/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts",
    "src/constants/images.js"
  ]
}
